<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="board">
	<!-- bno,title,content,writer, regdate,updatedate -->
	<!--작성 -->
  <!-- bno,title,content,writer,regdate,updatedate -->
  
  <select id="selectBno" resultType="int">
     select tbl_board_seq.nextval from dual
  </select>
  
  <!-- <insert id="insert">
     insert into tbl_board (bno,title,content,writer)
              values ( tbl_board_seq.nextval ,#{title},#{content},#{writer})
  </insert> -->
  <insert id="insert">
     insert into tbl_board (bno,title,content,writer)
              values ( #{bno} ,#{title},#{content},#{writer})
  </insert>
  
   <!-- list.jsp에 출력될 목록 조회 -->
  <select id="selectAll" resultType="BoardVO">  
      select  
      /*+  INDEX_DESC(tbl_board board_pk)     */
      bno,title,writer,replycnt,regdate,updateDate                  
      from tbl_board
      <include refid="criCondition">
      
      </include>
  </select>

  <!-- get.jsp 또는 modify에 출력될 내용 조회 -->    
  <select id="select" resultType="BoardVO">
      select  bno,title,content, writer,regdate,updateDate                 
      from tbl_board
      where bno=#{bno}
  </select>  
  <update id="update">
  	update tbl_board  
  	set title = #{title}, content=#{content}, updatedate=sysdate
  	where bno = #{bno}
  </update>
  <delete id="delete">
  	delete from tbl_board
  	where bno = #{bno}
  </delete>
  
  <!-- 댓글 수 증감표시 
  	amount : 추가 또는 삭제된 댓글의 갯수 
   -->
  <update id="updateReplyCnt">
  	update tbl_board set replycnt = replycnt + #{amount}
  	where bno=#{bno}
  </update>
  
  <!-- 공통으로 사용할 부분 SQL문 저장하는 용도 -->
  <sql id="criCondition">
  <if test="type=='W'.toString()">
         where writer like '%'|| #{keyword} ||'%'
  </if>
    <if test="type=='T'.toString()">
         where title like '%'|| #{keyword} ||'%'
  </if>
  </sql>
  
  
<!--   전체레코드수(검색어기준) -->
   <select id="getTotalCount" resultType="int">
  	select count(*) from tbl_board
 	<include refid="criCondition"></include>
  </select>
  

</mapper>
